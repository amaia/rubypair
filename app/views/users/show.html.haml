- pres = UserPresenter.new(@user)
- content_for :title, "#{pres.github_login}'s profile"

#user-profile
  = image_tag pres.gravatar_image_url, class: :avatar

  %h2= pres.name

  %ul
    %li.pairing-preference
      %label
        Pairing preference
      %span.value= pres.pairing_preference
    - if pres.display_location?
      %li.location
        %label Location
        %span.value= pres.location
    - if pres.display_email?
      %li.email
        %label E-mail
        %span.value= mail_to pres.email, pres.email, encode: "javascript"
    - if pres.display_twitter?
      %li.twitter
        %label Twitter
        %span.value= link_to pres.twitter, pres.twitter_link
    %li.interests
      %label Interests
      %span.value.lengthy= pres.interest_links
